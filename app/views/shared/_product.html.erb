<div class="col-sm-12 col-md-4">
  <%= image_tag(product.image_url, class: "img-responsive") %>
  <h2><%= product.name %></h2>
  <h3><%= number_to_currency(product.price, unit:"â‚¬") %></h3>
  <p><%= product.colour %></p>
  <p><%= product.description %></p>

  <p>
    <%= link_to 'Show', product, class:"btn btn-default"%>

    <!-- Edit and Destroy with admin conditional -->
    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(product), class:"btn btn-warning" %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"%>
    <% end %>
  </p>

</div>
