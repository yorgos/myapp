<p id="notice"><%= notice %></p>

<div class="container show-product-body">

  <%= link_to 'Back', products_path, class:"btn btn-default" %>
  <br>
  <div>
    <%= image_tag(@product.image_url, class: "img-responsive") %>
  </div>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <br>

  <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-default"%>

  <br>

  <!-- Highest Rating Comment.
  see the scope in models/product.rb > scope :rating_desc, -> {order(rating: :desc)}
  and the method highest_rating_comment defined inside the models/comment.rb
  -->
  <p>
    <%= @product.highest_rating_comment %>
  </p>

  <!-- Lowest Rating Comment -->
  <p>
    <%= @product.lowest_rating_comment %>
  </p>

</div><!-- /container-->
